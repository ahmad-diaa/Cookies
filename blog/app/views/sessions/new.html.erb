<html>
<head>
  <style>
  
input, textarea, select, .uneditable-input {
  border: 1px solid #bbb;
  width: 100%;
  margin-bottom: 15px;
  @include box_sizing;
}

input {
  height: auto !important;
}
.checkbox {
  margin-top: -10px;
  margin-bottom: 10px;
  span {
    margin-left: 20px;
    font-weight: normal;
  }
}

#session_remember_me {
  width: auto;
  margin-left: 0;
}
  </style>
  </head>

  <body>

 <div class="row">

<div class="col-md-6 col-md-offset-3">
  <%= form_for( :session, url: login_path) do |f| %>
     
            
             <label>Email:</label>
            <%= f.text_field :email, class: "input", placeholder: "Enter Your Email" %>
          
          
             <label>Password:</label>
            <%= f.password_field :password, class: "input", placeholder: "Enter Your Password" %>
            <%= f.label :remember_me, class: "checkbox inline" do %>
        <%= f.check_box :remember_me %>
        <span>Remember me </span>
      <% end %>
            
          <%= f.submit "Login in", class: "btn btn-default" %>
      <% end %>
      </div>
      </div>
      </body>
</html>