  <script>
  $(function() {
    $( "#dialog" ).dialog();
  });
  </script>


  <ul class="nav nav-tabs" role="tablist">
        <li><a href="#">Take A Tour</a></li>

    <li><a href="#">My Profile</a></li>
    <li><%= link_to 'Blog' , articles_path %></li>
<li><%= link_to 'About Us', aboutus_intro_path %></li>
  </ul>



  </head>

  <body> 
<div class="newuser">
<h1 align-"center"><font color="yellow" face="sans-serif" > New User Account</font></h1>
</div>
  <div class="row">
  <div class="col-md-6 col-md-offset-3">
   <%= form_for (@user) do |f| %>
 
<% if @user.errors.any? %>

   <div id="dialog" title="Errors" >

    <!-- <div id="error_explanation"> -->
     <font size ="2"><b>
        The form contains <%= pluralize(@user.errors.count, "error") %>.
    <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
      </ul> 
    </font>
    </div>

<% end %>         
<div id ="container" style="width:100%;">
 
          <label>Name:</label> <br>
            <%= f.text_field :name, class: "input", placeholder: "Enter Your Name" %>
</div>
<div id ="container" style="width:100%;">

              <label>Password:</label> <br>
            <%= f.password_field :password, class: "input", placeholder: "Enter Your Password" %>
</div>            
<div id ="container" style="width:100%;">
             <label>Confirm Password:</label> <br>
            <%= f.password_field :password_confirmation, class: "input", placeholder: "Confirm Your Password" %>
</div>
<div id ="container" style="width:100%;">          
           <label>Signature:</label>
            <%= f.text_field :signature, class: "input", placeholder: "Signature" %>
</div>
          <%= f.submit "Sign up", class: "btn btn-default" %>
</div>
      <% end %>
      </div>
      </div>
      </body>
      </html>