<html>
<head>
<meta charset="utf-8"> </meta>
  <meta name="viewport" content="width=device-width, initial-scale=1"> </meta>
  <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css"> </link>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
  <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
  <style>
input, textarea, select, .uneditable-input {
  border: 1px solid #bbb;
  width: 100%;
  margin-bottom: 15px;
  @include box_sizing;
}
label{
  color: lightblue;
}
input {
  height: auto !important;
}
  </style>

  <ul class="nav nav-tabs" role="tablist">
        <li><a href="#">Take A Tour</a></li>

    <li><a href="#">My Profile</a></li>
    <li><%= link_to 'Blog' , articles_path %></li>
<li><%= link_to 'About Us', aboutus_intro_path %></li>
  </ul>
  </head>

  <body> 
<div class="newuser">
<h1 align-"center"><font color="yellow" face="sans-serif" > New User Account</font></h1>
</div>
  <div class="row">
  <div class="col-md-6 col-md-offset-3">
   <%= form_for (@user) do |f| %>
    <%= render 'shared/error_messages' %>
         
          <label>Name:</label>
            <%= f.text_field :name, class: "input", placeholder: "Enter Your Name" %>
            
            
             <label>Email:</label>
            <%= f.email_field :email, class: "input", placeholder: "Enter Your Email" %>
            
            
             <label>Password:</label>
            <%= f.password_field :password, class: "input", placeholder: "Enter Your Password" %>
            
            
             <label>Confirm Password:</label>
            <%= f.password_field :password_confirmation, class: "input", placeholder: "Confirm Your Password" %>
          
          
           <label>Signature:</label>
            <%= f.text_field :signature, class: "input", placeholder: "Signature" %>
          
          <%= f.submit "Sign up", class: "btn btn-default" %>
      <% end %>
      </div>
      </div>
      </body>
      </html>